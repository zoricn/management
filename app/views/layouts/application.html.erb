<!DOCTYPE html>
<html>
<head>
  <title>Base Application</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>
<body>
 <SCRIPT LANGUAGE="JavaScript">
  $(function() {
   $('#flash_notice').delay(500).fadeIn('normal', function() {
      $(this).delay(2500).fadeOut();
   });
	$('#flash_alert').delay(500).fadeIn('normal', function() {
		    $(this).delay(2500).fadeOut();
		 });
	}); 
</SCRIPT>


  <div class="container">
    		
   <%= render "layouts/application/header" %>

   <div class ='header'>
	    <h1><%= yield(:title).nil? ? "Nano" : yield(:title)%></h1>
        <% if notice %>
				  <p id="flash_notice" class="notice"><%= notice %></p>
				<% end %>

				<% if alert %>
				  <p id="flash_alert" class="alert"><%= alert %></p>
				<% end %>
   </div>

    <div class = 'content'>
      
        <%= yield %>      
      
		</div>
    <%= yield(:footer) %>
  </div>

</body>
</html>
